{
  "name": "@avelin/zero",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsc --watch",
    "dev:zero": "zero-cache-dev -p src/schema.ts",
    "zero:migrate": "tsx src/scripts/migrate.ts",
    "zero:deploy-permissions": "zero-deploy-permissions --schema-path src/schema.ts",
    "build": "tsc",
    "check": "biome check .",
    "check:fix": "biome check . --write"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "devDependencies": {
    "@avelin/typescript-config": "workspace:*",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "@avelin/database": "workspace:*",
    "@rocicorp/zero": "catalog:",
    "dotenv": "^16.4.7",
    "drizzle-orm": "catalog:",
    "drizzle-zero": "^0.5.1"
  }
}
